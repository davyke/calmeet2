<style>
    .hero{
        width: 100%;
        overflow: hidden;
        display: flex;
        /* background-color: yellow; */
    }
    .banner{
        width: 55%;
        /* background-color: red; */
        padding-left: 2rem;
        margin-top: 5rem;
        /* padding-bottom: 3rem; */
    }
    .banner h1{
        font-size: 3rem;
        font-weight: 300;
        color: white;
        width: 70%;

    }
