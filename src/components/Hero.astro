    }
    .button .meet{
        width: 40%;
        height: 3rem;
        border: none;
        border-radius: .5rem;
        background-color: rgb(59, 54, 54);
        font-size: 1rem;
        padding-left:1rem ;
        color:white;

    }
    .button .join{
        width: 40%;
        height: 3rem;
        border: none;
        border-radius:.5rem;
        padding-right: 1rem;
        background-color: aqua;
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
        justify-content: center;
        display: flex;
        align-items: center;
    


    }
    .button .join a{
        text-decoration: none;
        color:black;
        /* margin-top: 1rem; */
